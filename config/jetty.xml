                        <Set name="keyManagerPassword"><Property name="jetty.keystore_password"/></Set>
                        <Set name="trustStore"><Property name="es.config"/>/keystore</Set>
                        <Set name="trustStorePassword"><Property name="jetty.keystore_password"/></Set>
